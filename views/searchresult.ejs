<!DOCTYPE html>
<html>
  <head>
    <title>Search results</title>
  </head>
  <body>
    <h1>Search results for "<%= keyword %>"</h1>
    <!-- Display search results -->
    <% if (results.length === 0) { %>
      <p>No books found.</p>
    <% } else { %>
      <table border="1">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Price (Â£)</th>
        </tr>
        <% results.forEach(function (book) { %>
          <tr>
            <td><%= book.id %></td>
            <td><%= book.name %></td>
            <td><%= book.price %></td>
          </tr>
        <% }) %>
      </table>
    <% } %>

    <p><a href="/books/search">New search</a></p>
    <p><a href="/">Back to home</a></p>
  </body>
</html>
